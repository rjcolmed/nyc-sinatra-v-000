<h1>Edit <%= @figure.name %></h1>
<form action="/figures/<%= @figure.id %>" method="post">
<input type="hidden" id="hidden" name="_method" value="patch">

<div>
  <label for="figure_name">Name: </label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
</div>

<br></br>

<div>
  <label for="title_name">Add New Title: </label>
  <input type="text" id="new_title" name="title[name]">
</div>

<br></br>

<div>
  <label for="figure_titles">Add Existing Titles: </label><br>
  <% @titles.each do |title| %>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <% "checked" if @figure.titles.include?(title) %> >
      <%= title.name %>
    </input>
<% end %>
</div>

<br></br>

<div>
  <label for="landmark_name">Add New Landmark: </label>
  <input type="text" id="new_landmark" name="landmark[name]">
</div>

<br></br>

<div>
  <label for="figure_landmarks">Add Existing Landmarks: </label><br>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <% "checked" if @figure.landmarks.include?(landmark) %> >
      <%= landmark.name %>
    </input>
  <% end %>
</div>

<br></br>

<input type="submit" value="Edit Figure">

</form>